# Copy this file to `.env` (in the same `backend/` folder) and adjust values if needed.

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost/face_groups
POSTGRES_DB=face_groups

# Object Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=photos
MINIO_USE_SSL=false

# Face Recognition
INSIGHTFACE_MODEL_PATH=buffalo_l
FACE_SIMILARITY_THRESHOLD=0.6

# Celery (optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API
API_HOST=0.0.0.0
API_PORT=8000
# JSON list string
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Processing
ENABLE_AUTO_PROCESSING=true

